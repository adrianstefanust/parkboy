<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.parkboy.parkboy">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/key" />

        <activity
            android:name=".ui.login.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.home.HomeActivity"
            android:label="ParkBoy"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".ui.map.MapActivity"
            android:label="Map"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".ui.feature.BookActivity"
            android:label="Book"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.feature.AvailableActivity"
            android:label="Available"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.feature.ParkActivity"
            android:label="Park"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.feature.WalletActivity"
            android:label="Wallet"
            android:theme="@style/AppTheme" />
    </application>

</manifest>